{
  "manifest_version": 3,
  "name": "Solana Memecoin Tracker",
  "version": "1.0",
  "description": "Display top 10 Solana memecoins by volume",
  "permissions": ["storage"],
  "host_permissions": [
    "https://public-api.birdeye.so/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
